<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/datos_user_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_perfil"
        android:textStyle="bold"
        android:textSize="0dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/user_name_perfil_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datos_user_perfil"
        android:paddingLeft="5dp"
        android:text="Nombre"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/user_name_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_perfil_text"
        android:paddingLeft="5dp"

        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/user_surname_perfil_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_perfil"
        android:paddingLeft="5dp"
        android:text="Apellidos"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/user_surname_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_surname_perfil_text"
        android:paddingLeft="5dp"

        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/user_email_perfil_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_surname_perfil"
        android:paddingLeft="5dp"
        android:text="Email"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/user_email_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email_perfil_text"
        android:editable="false"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp" />



    <Button
        android:id="@+id/perfil_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="@string/user_perfil_button"
        android:layout_marginTop="100dp" />

</RelativeLayout>