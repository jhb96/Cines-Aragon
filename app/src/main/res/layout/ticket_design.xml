<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <ImageView
        android:id="@+id/ticket_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/entradas_template"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ticket_image"
        android:layout_alignTop="@+id/ticket_image"
        android:layout_alignEnd="@+id/ticket_image"
        android:layout_alignBottom="@+id/ticket_image"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="95dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/movie_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="EL Joker"
            android:gravity="center"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/cinema_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="Nombre del cine"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/type_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Adulto"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/date_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="10/04/2020 14:20"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="0dp"
            android:textSize="12sp"/>

    </LinearLayout>


</RelativeLayout>